@model TabScore2.Models.EnterContractModel

<div class="row mt-4">
    <div class="col-12 text-center">
        <h2>
            @localizer["Board"] @Model.BoardNumber
        </h2>
    </div>
</div>

<div class="row">
    <div class="col-12 text-center">
        <h2>
            @localizer["ConfirmResult"]
        </h2>
    </div>
</div>

@if (Model.ContractLevel == 0)
{
    <div class="row mt-4">
        <div class="col-12 text-center">
            <h2>
                <span style="color:darkgreen">@localizer["AllPass"]</span>
            </h2>
        </div>
    </div>
}
else
{
    <div class="row mt-4">
        <div class="col-12 text-center">
            <h2>
                @Html.Raw(Model.ContractDisplay)
            </h2>
        </div>
    </div>

    if (Model.Score > 0)
    {
        <div class="row">
            <div class="col-12 text-center">
                <h2>
                    @Model.Score @localizer["To"] @localizer["N"]@localizer["S"]
                </h2>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12 text-center">
                <h2>
                    @(-Model.Score) @localizer["To"] @localizer["E"]@localizer["W"]
                </h2>
            </div>
        </div>
    }
}

<script>
    var isSubmitted = false;
    var confirmResultDelay = @ViewData["ConfirmResultDelay"];

    window.onload = function () {
        if (confirmResultDelay > 0) {
            document.getElementById("OKButton").disabled = true;
            setTimeout(function () {
                document.getElementById("OKButton").disabled = false;
            }, confirmResultDelay * 1000);
        }
    };

    function OKButtonClick() {
        if (document.getElementById("OKButton").disabled) return;
        if (!isSubmitted) {
            isSubmitted = true;
            location.href = '@Url.Action("OKButtonClick", "ConfirmResult")';
        }
    }

    function BackButtonClick() {
        if (document.getElementById("BackButton").disabled) return;
        if (!isSubmitted) {
            isSubmitted = true;
            location.href = '@Url.Action("BackButtonClick", "ConfirmResult")';
        }
    }
</script>