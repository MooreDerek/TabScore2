@model TabScore2.Models.EnterContract

<div class="row mt-5">
    <div class="col-12 text-center">
        <h3>
            @localizer["Board"] @Model.BoardNumber
        </h3>
    </div>
</div>

<div class="row">
    <div class="col-12 text-center">
        <h3>
            @localizer["ConfirmResult"]
        </h3>
    </div>
</div>

@if (Model.ContractLevel == 0)
{
    <div class="row mt-4">
        <div class="col-12 text-center">
            <h3>
                <span style="color:darkgreen">@localizer["AllPass"]</span>
            </h3>
        </div>
    </div>
}
else
{
    <div class="row mt-4">
        <div class="col-12 text-center">
            <h3>
                @Html.Raw(Model.ContractDisplay)
            </h3>
        </div>
    </div>

    if (Model.Score > 0)
    {
        <div class="row">
            <div class="col-12 text-center">
                <h3>
                    @Model.Score @localizer["To"] @localizer["N"]@localizer["S"]
                </h3>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12 text-center">
                <h3>
                    @(-Model.Score) @localizer["To"] @localizer["E"]@localizer["W"]
                </h3>
            </div>
        </div>
    }
}

<script>
    var isSubmitted = false;

    function OKButtonClick() {
        if (document.getElementById("OKButton").disabled) return;
        if (!isSubmitted) {
            isSubmitted = true;
            location.href = '@Url.Action("OKButtonClick", "ConfirmResult")?deviceNumber=@Model.TabletDeviceNumber';
        }
    }

    function BackButtonClick() {
        if (document.getElementById("BackButton").disabled) return;
        if (!isSubmitted) {
            isSubmitted = true;
            location.href = '@Url.Action("BackButtonClick", "ConfirmResult")?deviceNumber=@Model.TabletDeviceNumber';
        }
    }
</script>