@model TabScore2.Models.EnterContractModel

<style>
    .btn-suit {
        background-color: paleturquoise;
    }
</style>

<div id="leadNoMatchModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header text-primary">
                <p class="modal-title text-center">
                    <h3>@localizer["Warning"]</h3>
                </p>
            </div>
            <div class="modal-body">
                <p>@localizer["LeadNoMatch"]</p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-lg btn-success" data-bs-dismiss="modal">
                    @localizer["OK"] <span class="icon-check-circle"></span>
                </button>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12 text-center p-0">
        <h2>
            @localizer["Board"] @Model.BoardNumber: @Html.Raw(Model.ContractDisplay)
        </h2>
    </div>
</div>

<div class="row">
    <div class="col-12 text-center p-0">
        <h2>
            @localizer["EnterLead"]
        </h2>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12 text-center p-0">
        <button id="cA" class="btn btn-primary btn-lg m-1 px-0" style="width:2.5em" ontouchstart="touchAvailable = true; setCard('A')" onclick="if (!touchAvailable) setCard('A')">
            @localizer["A"]
        </button>
        <button id="cK" class="btn btn-primary btn-lg m-1 px-0" style="width:2.5em" ontouchstart="touchAvailable = true; setCard('K')" onclick="if (!touchAvailable) setCard('K')">
            @localizer["K"]
        </button>
        <button id="cQ" class="btn btn-primary btn-lg m-1 px-0" style="width:2.5em" ontouchstart="touchAvailable = true; setCard('Q')" onclick="if (!touchAvailable) setCard('Q')">
            @localizer["Q"]
        </button>
        <button id="cJ" class="btn btn-primary btn-lg m-1 px-0" style="width:2.5em" ontouchstart="touchAvailable = true; setCard('J')" onclick="if (!touchAvailable) setCard('J')">
            @localizer["J"]
        </button>
    </div>
</div>

<div class="row">
    <div class="col-12 text-center p-0">
        <button id="cT" class="btn btn-primary btn-lg m-1 px-0" style="width:2.5em" ontouchstart="touchAvailable = true; setCard('T')" onclick="if (!touchAvailable) setCard('T')">
            @localizer["TenShorthand"]
        </button>
        <button id="c9" class="btn btn-primary btn-lg m-1 px-0" style="width:2.5em" ontouchstart="touchAvailable = true; setCard('9')" onclick="if (!touchAvailable) setCard('9')">
            9
        </button>
        <button id="c8" class="btn btn-primary btn-lg m-1 px-0" style="width:2.5em" ontouchstart="touchAvailable = true; setCard('8')" onclick="if (!touchAvailable) setCard('8')">
            8
        </button>
        <button id="c7" class="btn btn-primary btn-lg m-1 px-0" style="width:2.5em" ontouchstart="touchAvailable = true; setCard('7')" onclick="if (!touchAvailable) setCard('7')">
            7
        </button>
        <button id="c6" class="btn btn-primary btn-lg m-1 px-0" style="width:2.5em" ontouchstart="touchAvailable = true; setCard('6')" onclick="if (!touchAvailable) setCard('6')">
            6
        </button>
    </div>
</div>

<div class="row">
    <div class="col-12 text-center p-0">
        <button id="c5" class="btn btn-primary btn-lg m-1 px-0" style="width:2.5em" ontouchstart="touchAvailable = true; setCard('5')" onclick="if (!touchAvailable) setCard('5')">
            5
        </button>
        <button id="c4" class="btn btn-primary btn-lg m-1 px-0" style="width:2.5em" ontouchstart="touchAvailable = true; setCard('4')" onclick="if (!touchAvailable) setCard('4')">
            4
        </button>
        <button id="c3" class="btn btn-primary btn-lg m-1 px-0" style="width:2.5em" ontouchstart="touchAvailable = true; setCard('3')" onclick="if (!touchAvailable) setCard('3')">
            3
        </button>
        <button id="c2" class="btn btn-primary btn-lg m-1 px-0" style="width:2.5em" ontouchstart="touchAvailable = true; setCard('2')" onclick="if (!touchAvailable) setCard('2')">
            2
        </button>
    </div>
</div>

<div class="row mt-2">
    <div class="col-12 text-center">
        <button id="sS" class="btn btn-suit btn-lg m-1 p-0" style="color:black; width:2.5em; height:2.5em" ontouchstart="touchAvailable = true; setSuit('S')" onclick="if (!touchAvailable) setSuit('S')">
            <div style="font-size:xx-large; line-height:1em">&spades;</div>
        </button>
        <button id="sH" class="btn btn-suit btn-lg m-1 p-0" style="color:red; width:2.5em; height:2.5em" ontouchstart="touchAvailable = true; setSuit('H')" onclick="if (!touchAvailable) setSuit('H')">
            <div style="font-size:xx-large; line-height:1em">&hearts;</div>
        </button>
        <button id="sD" class="btn btn-suit btn-lg m-1 p-0" style="color:lightsalmon; width:2.5em; height:2.5em" ontouchstart="touchAvailable = true; setSuit('D')" onclick="if (!touchAvailable) setSuit('D')">
            <div style="font-size:xx-large; line-height:1em">&diams;</div>
        </button>
        <button id="sC" class="btn btn-suit btn-lg m-1 p-0" style="color:lightslategrey; width:2.5em; height:2.5em" ontouchstart="touchAvailable = true; setSuit('C')" onclick="if (!touchAvailable) setSuit('C')">
            <div style="font-size:xx-large; line-height:1em">&clubs;</div>
        </button>
    </div>
</div>

@if (Model.LeadValidation != TabScore2.Globals.LeadValidationOptions.Validate)
{
    <div class="row mt-2">
        <div class="col-12 text-center p-0">
            <button id="skip" class="btn btn-outline-danger btn-lg m-1 px-2" ontouchstart="touchAvailable = true; setSkip()" onclick="if (!touchAvailable) setSkip()">
                @localizer["Skip"]
            </button>
        </div>
    </div>
}

@if (Model.LeadValidation == TabScore2.Globals.LeadValidationOptions.Warning)
{
    <script>
        var leadNoMatchModal = new bootstrap.Modal(document.getElementById("leadNoMatchModal"), { backdrop: 'static' })
        leadNoMatchModal.show()
    </script>
}

<script>
    var leadCard = "@Model.LeadCard";
    var urlOKButtonClick = '@Url.Action("OKButtonClick", "EnterLead")?deviceNumber=@Model.TabletDeviceNumber';
    var urlEnterContract = '@Url.Action("Index", "EnterContract")?deviceNumber=@Model.TabletDeviceNumber&boardNumber=@Model.BoardNumber';
</script>
<script src="~/js/EnterLead.js"></script>