<div class="row mt-4">
    <div class="col-12 text-center text-danger">
        <h2>
            <span class="icon-exclamation-circle"></span> @localizer["Error"]
        </h2>
    </div>
</div>
<div class="row mt-4">
    <div class="col">
    </div>
    <div class="col-8 text-center">
        <h5 class="mt-2">
            @localizer["ErrorDBConnection"]
        </h5>
        <h5>
            @localizer["ErrorReestablishConnection"]
        </h5>
    </div>
    <div class="col">
    </div>
</div>

<script>
    var isSubmitted = false;

    function OKButtonClick() {
        if (document.getElementById("OKButton").disabled) return;
        if (!isSubmitted) {
            isSubmitted = true;
            location.href = '@Url.Action("OKButtonClick", "ErrorScreen")';
        }
    }
</script>