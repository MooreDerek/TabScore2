@model TabScore2.Models.ShowPlayerIDs

<div id="notAllPlayerNumbersModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header text-danger">
                <p class="modal-title text-center">
                    <h3>@Strings["Warning"]</h3>
                </p>
            </div>
            <div class="modal-body">
                <p>@Strings["ErrorWaitAllIDs"]</p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-lg btn-success" data-bs-dismiss="modal">
                    @Strings["OK"] <span class="fa fa-check-circle"></span>
                </button>
            </div>
        </div>
    </div>
</div>

<div id="notAllNamesModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header text-primary">
                <p class="modal-title text-center">
                    <h3>@Strings["Warning"]</h3>
                </p>
            </div>
            <div class="modal-body">
                <p>@Strings["ErrorNotAllIDs"]</p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-lg btn-success" data-bs-dismiss="modal">
                    @Strings["OK"] <span class="fa fa-check-circle"></span>
                </button>
            </div>
        </div>
    </div>
</div>

<div class="row mt-5">
    <div class="col-12 text-center">
        <h3>
            @Strings["EnterEditPlayerIDs"]
        </h3>
    </div>
</div>

@foreach (var playerEntry in Model)
{
    if (playerEntry.Direction == Direction.North)
    {
        <div class="row mt-3">
            <div class="col-12 text-center p-0">
                <h3 style="color:blue">
                    @Strings["North"]/@Strings["South"]: @playerEntry.Number
                </h3>
            </div>
        </div>
    }
    else if (playerEntry.Direction == Direction.East)
    {
        <div class="row mt-3">
            <div class="col-12 text-center p-0">
                <h3 style="color:blue">
                    @Strings["East"]/@Strings["West"]: @playerEntry.Number
                </h3>
            </div>
        </div>
    }

    <div class="row">
        <div class="col-3 align-self-center">
            <h4>
                @Strings[playerEntry.Direction.ToString()]:
            </h4>
        </div>
        <div class="col-3 px-1">
            @if (playerEntry.DisplayName == string.Empty)
            {
                <button class="btn btn-primary btn-lg m-1 px-1" style="min-width: 4.8rem" ontouchstart="touchAvailable = true; EnterPlayerID('@playerEntry.Direction')" onclick="if (!touchAvailable) EnterPlayerID('@playerEntry.Direction')">
                    @Strings["Enter"]
                </button>
            }
            else
            {
                <button class="btn btn-info btn-lg m-1 px-1" style="min-width: 4.8rem" ontouchstart="touchAvailable = true; EnterPlayerID('@playerEntry.Direction')" onclick="if (!touchAvailable) EnterPlayerID('@playerEntry.Direction')">
                    @Strings["Edit"]
                </button>
            }
        </div>
        <div class="col-6 px-0 align-self-center">
            <h4>
                @playerEntry.DisplayName
            </h4>
        </div>
    </div>
}

@if (Model.ShowMessage)
{
    <div class="row mt-5">
        <div class="col-1">
        </div>
        <div class="col-10 text-center">
            <h5>
                @Strings["NeedAllIDs"]
            </h5>
        </div>
        <div class="col-1">
        </div>
    </div>
}

@if (Model.ShowWarning)
{
    <script>
        var notAllPlayerNumbersModal = new bootstrap.Modal(document.getElementById("notAllPlayerNumbersModal"), { backdrop: 'static' });
        notAllPlayerNumbersModal.show();
    </script>
}

<script>
    var isSubmitted = false;

    function OKButtonClick() {
        if (document.getElementById("OKButton").disabled) return;
        if (@Model.NumberOfBlankEntries > 0) {
            var notAllNamesModal = new bootstrap.Modal(document.getElementById("notAllNamesModal"), { backdrop: 'static' });
            notAllNamesModal.show();
        }
        else {
            if (!isSubmitted) {
                isSubmitted = true;
                location.href = '@Url.Action("OKButtonClick", "ShowPlayerIDs")?deviceNumber=@Model.TabletDeviceNumber';
            }
        }
    }

    function EnterPlayerID(direction) {
            if (!isSubmitted) {
                isSubmitted = true;
                location.href = '@Url.Action("Index", "EnterPlayerID")?deviceNumber=@Model.TabletDeviceNumber&direction=' + direction;
            }
    }
</script>