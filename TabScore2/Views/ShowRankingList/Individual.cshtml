@model TabScore2.Models.ShowRankingListModel

<div class="row mt-4">
    <div class="col-12 text-center">
        <h4>
            @localizer["RankingList"]
        </h4>
    </div>
</div>

<div class="row">
    <div class="col-12 p-0">
        <table class="table table-sm table-bordered text-center" style="margin:auto; width:80%">
            <thead class="thead-dark">
                <tr>
                    <th>@localizer["Rank"]</th>
                    <th>@localizer["PlayerNumber"]</th>
                    <th>@localizer["Percentage"]</th>
                </tr>
            </thead>
            <tbody id="tableBody">
                @foreach (var Result in Model)
                {
                    if (Model.NumberNorth == Result.PairNo)
                    {
                        <tr class="table-success">
                            <td>@Result.Rank</td>
                            <td>@Result.PairNo</td>
                            <td>@Result.Score%</td>
                        </tr>
                    }
                    else if (Model.NumberSouth == Result.PairNo)
                    {
                        <tr class="table-warning">
                            <td>@Result.Rank</td>
                            <td>@Result.PairNo</td>
                            <td>@Result.Score%</td>
                        </tr>
                    }
                    else if (Model.NumberEast == Result.PairNo)
                    {
                        <tr class="table-danger">
                            <td>@Result.Rank</td>
                            <td>@Result.PairNo</td>
                            <td>@Result.Score%</td>
                        </tr>
                    }
                    else if (Model.NumberWest == Result.PairNo)
                    {
                        <tr class="table-info">
                            <td>@Result.Rank</td>
                            <td>@Result.PairNo</td>
                            <td>@Result.Score%</td>
                        </tr>
                    }
                    else
                    {
                        <tr>
                            <td>@Result.Rank</td>
                            <td>@Result.PairNo</td>
                            <td>@Result.Score%</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    var urlPollRanking = '@Url.Action("PollRanking", "ShowRankingList")';
    var urlEndScreen = '@Url.Action("Index", "EndScreen")';
    var urlShowMove = '@Url.Action("Index", "ShowMove")?newRoundNumber=' + (@Model.RoundNumber + 1).toString();
    var urlShowBoards = '@Url.Action("Index", "ShowBoards")';
    var finalRankingList = @Model.FinalRankingList.ToString().ToLower();
    var pairNS = @Model.NumberNorth;
    var pairEW = @Model.NumberEast;
    var south = @Model.NumberSouth;
    var west = @Model.NumberWest;
</script>
<script src="~/js/IndividualRankingList.js"></script>