@model TabScore2.Models.ShowRankingListModel

<div class="row mt-4">
    <div class="col-12 text-center">
        <h4>
            @localizer["RankingList"]
        </h4>
    </div>
</div>

<div class="row">
    <div class="col-12 p-0">
        <table class="table table-sm table-bordered text-center" style="margin:auto; width:80%">
            <thead class="thead-dark">
                <tr>
                    <th>@localizer["Rank"]</th>
                    <th>@localizer["PairNumber"]</th>
                    <th>@localizer["Percentage"]</th>
                </tr>
            </thead>
            <tbody id="tableBody">
                @foreach (var Rank in Model)
                {
                    if (Model.NumberNorth == Rank.PairNo)
                    {
                        <tr class="table-success">
                            <td>@Rank.Rank</td>
                            <td>@Rank.PairNo</td>
                            <td>@Rank.Score%</td>
                        </tr>
                    }
                    else if (Model.NumberEast == Rank.PairNo)
                    {
                        <tr class="table-warning">
                            <td>@Rank.Rank</td>
                            <td>@Rank.PairNo</td>
                            <td>@Rank.Score%</td>
                        </tr>
                    }
                    else
                    {
                        <tr>
                            <td>@Rank.Rank</td>
                            <td>@Rank.PairNo</td>
                            <td>@Rank.Score%</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    var urlPollRanking = '@Url.Action("PollRanking", "ShowRankingList")?deviceNumber=@Model.TabletDeviceNumber';
    var urlEndScreen = '@Url.Action("Index", "EndScreen")?deviceNumber=@Model.TabletDeviceNumber';
    var urlShowMove = '@Url.Action("Index", "ShowMove")?deviceNumber=@Model.TabletDeviceNumber&newRoundNumber=' + (@Model.RoundNumber + 1).toString();
    var urlShowBoards = '@Url.Action("Index", "ShowBoards")?deviceNumber=@Model.TabletDeviceNumber';
    var finalRankingList = @Model.FinalRankingList.ToString().ToLower();
    var pairNS = @Model.NumberNorth;
    var pairEW = @Model.NumberEast;
</script>
<script src="~/js/OneWinnerRankingList.js"></script>
