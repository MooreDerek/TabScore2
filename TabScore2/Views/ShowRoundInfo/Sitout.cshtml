@model TabScore2.Models.ShowRoundInfoSitout

<div class="row mt-5">
    <div class="col-12 text-center">
        <h3>
            @Strings["Round"] @Model.RoundNumber
        </h3>
    </div>
</div>

@if (Model.TabletDevicesPerTable == 2)
{
    <div class="row mt-4">
        <div class="col-12 text-center">
            <h3 style="color:blue">
                @Strings["Pair"] @Model.PairNumber
            </h3>
        </div>
    </div>
}
else
{
    <div class="row mt-4">
        <div class="col-12 text-center">
            <h3 style="color:blue">
                @Strings["Player"] @Model.PairNumber
            </h3>
        </div>
    </div>
}

<div class="row mt-4">
    <div class="col-12 text-center">
        <h3 style="color:red">
            @Strings["SittingOut"]
        </h3>
    </div>
</div>

<div class="row">
    <div class="col-1">
    </div>
    <div class="col-10 text-center">
        <h5>
            @Strings["SittingOutNoTable"]
        </h5>
    </div>
    <div class="col-1">
    </div>
</div>

<script>
    var isSubmitted = false;

    function OKButtonClick() {
        if (document.getElementById("OKButton").disabled) return;
        if (!isSubmitted) {
            isSubmitted = true;
            location.href = '@Url.Action("Index", "ShowRankingList")?deviceNumber=@Model.TabletDeviceNumber';
        }
    }

    function BackButtonClick() {
        if (document.getElementById("BackButton").disabled) return;
        if (!isSubmitted) {
            isSubmitted = true;
            location.href = '@Url.Action("BackButtonClick", "ShowRoundInfo")?deviceNumber=@Model.TabletDeviceNumber';
        }
    }
</script>

