     @model TabScore2.Models.ShowTraveller

<div class="row mt-4">
    @if (Model.HandRecord)
    {
        <div class="col-9 p-0">
            <div class="row">
                <div class="col-12 text-center p-0">
                    <h3>
                        @Strings["Board"] @Model.BoardNumber
                    </h3>
                </div>
            </div>
            <div class="row">
                <div class="col-12 text-center p-0">
                    @if (Model.PercentageNS == string.Empty)
                    {
                        <h4>
                            @Strings["Traveller"]
                        </h4>
                    }
                    else
                    {
                        <h4>
                            @Strings["N"]@Strings["S"]: @Model.PercentageNS - @Strings["E"]@Strings["W"]: @Model.PercentageEW
                        </h4>
                    }
                </div>
            </div>
        </div>
        <div class="col-3 p-0">
            <button class="btn btn-outline-light btn-lg mr-2 my-2 float-end" ontouchstart="touchAvailable = true; handRecordClick()" onclick="if (!touchAvailable) handRecordClick()">
                <img src="~/Resources/Cards Logo.png" />
            </button>
        </div>
    }
    else
    {
        <div class="col-12 text-center p-0">
            <h4>
                @Strings["Board"] @Model.BoardNumber
            </h4>
        </div>
        <div class="col-12 text-center p-0">
            @if (Model.PercentageNS == "")
            {
                <h4>
                    @Strings["Traveller"]
                </h4>
            }
            else
            {
                <h4>
                    @Strings["N"]@Strings["S"]: @Model.PercentageNS - @Strings["E"]@Strings["W"]: @Model.PercentageEW
                </h4>
            }
        </div>
    }
</div>

<div class="row">
    <div class="col-12 p-0">
        <table class="table-sm table-bordered text-center" style="margin:auto; width:80%">
            <thead class="thead-dark">
                <tr>
                    <th>@Strings["N"]@Strings["S"]</th>
                    <th>@Strings["E"]@Strings["W"]</th>
                    <th>@Html.Raw(Strings["Contract"])</th>
                    <th>@Strings["ByOnTraveller"]</th>
                    <th>@Html.Raw(Strings["Lead"])</th>
                    <th>@Strings["N"]@Strings["S"] @Html.Raw(Strings["Score"])</th>
                    <th>@Strings["E"]@Strings["W"] @Html.Raw(Strings["Score"])</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var Result in Model)
                {
                     if (Result.Highlight)
                    {
                        <tr class="table-success">
                            <td>@Result.NumberNorth+@Result.NumberSouth</td>
                            <td>@Result.NumberEast+@Result.NumberWest</td>
                            <td>@Html.Raw(Result.DisplayContract)</td>
                            <td>@Result.DisplayDeclarerNSEW</td>
                            <td>@Html.Raw(Result.DisplayLeadCard)</td>
                            <td>@Html.Raw(Result.ScoreNS)</td>
                            <td>@Html.Raw(Result.ScoreEW)</td>
                        </tr>
                    }
                    else
                    {
                        <tr>
                            <td>@Result.NumberNorth+@Result.NumberSouth</td>
                            <td>@Result.NumberEast+@Result.NumberWest</td>
                            <td>@Html.Raw(Result.DisplayContract)</td>
                            <td>@Result.DisplayDeclarerNSEW</td>
                            <td>@Html.Raw(Result.DisplayLeadCard)</td>
                            <td>@Html.Raw(@Result.ScoreNS)</td>
                            <td>@Html.Raw(@Result.ScoreEW)</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    var isSubmitted = false;

    function OKButtonClick() {
        if (document.getElementById("OKButton").disabled) return;
        if (!isSubmitted) {
            isSubmitted = true;
            location.href = '@Url.Action("Index", "ShowBoards")?deviceNumber=@Model.TabletDeviceNumber';
        }
    }

    function BackButtonClick() {
        if (document.getElementById("BackButton").disabled) return;
        if (!isSubmitted) {
            isSubmitted = true;
            location.href = '@Url.Action("Index", "ConfirmResult")?deviceNumber=@Model.TabletDeviceNumber';
        }
    }

    function handRecordClick() {
        if (!isSubmitted) {
            isSubmitted = true;
            location.href = '@Url.Action("Index", "ShowHandRecord")?deviceNumber=@Model.TabletDeviceNumber&boardNumber=@Model.BoardNumber&fromView=@Model.FromView.ToString().ToLower()';
        }
    }
</script>