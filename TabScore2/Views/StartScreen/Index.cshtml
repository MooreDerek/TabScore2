<div id="warningModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header text-danger">
                <p class="modal-title text-center">
                    <h3>@localizer["Warning"]</h3>
                </p>
            </div>
            <div class="modal-body">
                <p>@TempData["WarningMessage"]</p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-success" style="font-size: 1.3rem" data-bs-dismiss="modal">
                    @localizer["OK"] <span class="fa fa-check-circle"></span>
                </button>
            </div>
        </div>
    </div>
</div>

<div class="row mt-5">
    <div class="col-12 text-center">
        <h2>
            @localizer["Welcome"]
        </h2>
    </div>
</div>
<div class="row">
    <div class="col-12 text-center">
        <h3>
            @localizer["To"]
        </h3>
    </div>
</div>
<div class="row">
    <div class="col-12 text-center">
        <h1>
            TabScore2
        </h1>
    </div>
</div>
<div class="row">
    <div class="col-12 text-center">
        <h6>
            (@localizer["Version"] @ViewData["Version"])
        </h6>
    </div>
</div>
<div class="row mt-3">
    <div class="col">
    </div>
    <div class="col-6 text-center">
        <h5>
            @localizer["WaitTD"]
        </h5>
    </div>
    <div class="col">
    </div>
</div>

@if (TempData["WarningMessage"] != null)
{
    <script>
        var warningModal = new bootstrap.Modal(document.getElementById("warningModal"), { backdrop: 'static' });
        warningModal.show();
    </script>
}

<script>
    var isSubmitted = false;

    function OKButtonClick() {
        if (document.getElementById("OKButton").disabled) return;
        if (!isSubmitted) {
            isSubmitted = true;
            location.href = '@Url.Action("OKButtonClick", "StartScreen")';
        }
    }
</script>